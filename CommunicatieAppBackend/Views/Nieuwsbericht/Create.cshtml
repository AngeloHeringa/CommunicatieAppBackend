@model CommunicatieAppBackend.Models.Nieuwsbericht

@{
    ViewData["Title"] = "Create";
    String defaultdt = DateTime.Now.ToString("yyyy-MM-ddThh:mm");
}

<h1>Create</h1>

<h4>Nieuwsbericht</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-controller="Nieuwsbericht" asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @* <input type="hidden" asp-for="NieuwsberichtId" /> *@
            <div class="form-group">
                <label asp-for="Titel" class="control-label"></label>
                <input asp-for="Titel" class="form-control" />
